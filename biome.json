{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "error",
				"useExportType": "warn",
				"useImportType": "warn",
				"noNonNullAssertion": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			},
			"suspicious": {
				"noVar": "error",
				"noExplicitAny": "warn",
				"noUnknownAtRules": "off"
			},
			"a11y": {
				"useButtonType": "warn",
				"noStaticElementInteractions": "warn",
				"useKeyWithClickEvents": "warn",
				"noLabelWithoutControl": "warn",
				"useMediaCaption": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"arrowParentheses": "always"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"includes": ["**", "!**/dist", "!**/node_modules", "!**/.astro", "!**/.turbo", "!**/*.astro"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
